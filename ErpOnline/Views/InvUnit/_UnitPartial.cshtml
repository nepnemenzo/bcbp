@model IEnumerable<ErpOnline.Models.InvUnitViewModel>


<div>
    <table id="UnitTable" class="table table-bordered table-hover table-responsive table-striped" style="border:0px">
        <thead>
            <tr>
                <th width="100">
                    ID
                </th>
                <th>
                    Unit Code
                </th>
                <th>
                    Description 1
                </th>
                <th>
                    Description 2
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@Html.DisplayFor(modelItem => item.Number)">
                    <td>
                        @Html.DisplayFor(modelItem => item.Number)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description2)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

