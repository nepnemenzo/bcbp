@model IEnumerable<ErpOnline.Models.Inventory.PODetailsModel>


<div>
    <table class="table table-striped table-bordered table-hover" id="poItemsTable" style="margin-left:0px">
        <thead>
            <tr>
                <th style="width:80px; text-align: center;">
                    ITEM #
                </th>
                <th style="text-align: center;">
                    DESCRIPTION
                </th>
                <th data-orderable="false" style="width:80px; text-align: center;">
                    QTY
                </th>
                <th data-orderable="false" style="width:80px; text-align: center;">
                    UNIT PRICE
                </th>
                <th data-orderable="false" style="width:80px; text-align: center;">
                    TOTAL
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@Html.DisplayFor(modelItem => item.detId)">
                    <td>
                        @Html.DisplayFor(modelItem => item.detId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.detItemQty)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.detItemPrice)
                    </td>
                    <td style="text-align:right">
                        @Html.DisplayFor(modelItem => item.detItemTotalAmount)
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>
