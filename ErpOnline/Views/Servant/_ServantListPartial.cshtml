@model IEnumerable<bcbp_101.Models.bcbp.ServantModel>

<div>
    <table class="table table-striped table-bordered table-hover" id="ServantDataTable">
        <thead>
            <tr>
                <th style="width:80px">
                    ID
                </th>
                <th style="width:300px">
                    Name
                </th>
                <th data-orderable="false" style="width:100px">
                    Service
                </th>
               
            </tr>

        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr data-id="@Html.DisplayFor(modelItem => item.id)">
                    <td>
                        @Html.DisplayFor(modelItem => item.memberId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    

                </tr>
            }
        </tbody>
    </table>
</div>




