@model IEnumerable<ErpOnline.Models.InvClientViewModel>

<table id="ClientTable" class="table table-bordered table-hover table-responsive table-striped" style="border:0px;">
    <thead>
        <tr>
            <th width="50">ID</th>
            <th>Name</th>
            <th>Company</th>
            <th>Email</th>
            <th>Address 1</th>
            <th>Conatct 1</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
            {
            <tr data-id="@Html.DisplayFor(modelItem => item.clt_Nr)">
                <td>
                    @Html.DisplayFor(modelItem => item.clt_Nr)
                </td>
                <td>
                    @item.clt_FirstName &nbsp;&nbsp; @item.clt_LastName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clt_Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clt_EmailAdd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clt_Add01)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.clt_Contact01)
                </td>
            </tr>
        }
    </tbody>
</table>